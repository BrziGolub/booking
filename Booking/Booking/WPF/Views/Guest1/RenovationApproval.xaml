<Page x:Class="Booking.WPF.Views.Guest1.RenovationApproval"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Booking.WPF.Views.Guest1"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="300"
      Title="RenovationApproval">

    <Grid >
        <Border  BorderThickness="1" BorderBrush="Black" CornerRadius="10" Background="Beige">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Label Content="Do you want to add suggestions for renorvation?" FontSize="15" FontWeight="Bold"></Label>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="YES" Margin="20" FontWeight="Bold" FontSize="18" Height="35" Width="50"></Button>
                    <Button Content="NO" Margin="20" FontWeight="Bold" FontSize="18" Height="35" Width="50"></Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
