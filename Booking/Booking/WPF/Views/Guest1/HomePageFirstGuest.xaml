<Page x:Class="Booking.View.HomePageFirstGuest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Booking.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePageFirstGuest">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,0,20,0" HorizontalAlignment="Center">
            <Image Source="/Resources/Images/location.png"></Image>
            <Label FontWeight="Bold" FontSize="17">What's your next destination?</Label>
        </StackPanel>

        <Grid Grid.Row="1" Margin="20,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Grid.Row="0">Accommodation name:</Label>
            <TextBox Grid.Column="1" Grid.Row="0" Margin="3" Text="{Binding Path=SearchName}"></TextBox>
            <Label Grid.Column="2" Grid.Row="0">State:</Label>
            <ComboBox Grid.Column="3" Grid.Row="0" x:Name="CountrycomboBox" Margin="3" SelectionChanged="FillCity"  SelectedItem="{Binding Path=SearchState,UpdateSourceTrigger=PropertyChanged}"></ComboBox>
            <Label Grid.Column="4" Grid.Row="0">Type:</Label>
            <CheckBox Grid.Column="5" Grid.Row="0" Margin="5" IsChecked="{Binding Path=IsCheckedApartment}">APARTMNET</CheckBox>
            <CheckBox Grid.Column="6" Grid.Row="0" Margin="5" IsChecked="{Binding Path=IsCheckedCottage}">COTTAGE</CheckBox>
            <CheckBox Grid.Column="7" Grid.Row="0" Margin="5" IsChecked="{Binding Path=IsCheckedHouse}">HOUSE</CheckBox>

            <Label Grid.Column="0"  Grid.Row="1">Staying days:</Label>
            <TextBox Grid.Column="1"  Grid.Row="1" Margin="3" Text="{Binding Path=SearchReservationDays}"></TextBox>
            <Label Grid.Column="2"  Grid.Row="1">City:</Label>
            <ComboBox x:Name="CitycomboBox" Grid.Column="3"  Grid.Row="1" Margin="3" SelectionChanged="FillCity" ItemsSource="{Binding Path=CityCollection}" SelectedItem="{Binding Path=SearchCity, UpdateSourceTrigger=PropertyChanged}"></ComboBox>
            <Label Grid.Column="4"  Grid.Row="1">Number of guests:</Label>
            <TextBox Grid.Column="5"  Grid.Row="1" Margin="3" Text="{Binding Path=SerachGuests}"></TextBox>
        </Grid>

        <Button Grid.Row ="2" HorizontalAlignment="Right" Width="120" FontWeight="Bold" Margin="20,5,20,5" Click="Button_Click_Search">SEARCH</Button>

        <StackPanel Grid.Row="3" Margin="20,0,20,5">
            <DataGrid x:Name="AccommodationDataGrid"  
                      SelectedItem="{Binding SelectedAccommodation, UpdateSourceTrigger=PropertyChanged}"
                      IsReadOnly="True" AutoGenerateColumns="False" Height="350" HeadersVisibility="Column" FontSize="13" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Width="120" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="State" Width="100" Binding="{Binding Location.State}"/>
                    <DataGridTextColumn Header="City" Width="100" Binding="{Binding Location.City}"/>
                    <DataGridTextColumn Header="Type" Width="80"  Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Capacity" Width="80"  Binding="{Binding Capacity}" />
                    <DataGridTextColumn Header="Advance reservation restrictions" Binding="{Binding MinNumberOfDays}"/>
                    <DataGridTextColumn Header="CancelationPeriod" Binding="{Binding CancelationPeriod}"/>
                    <DataGridTemplateColumn Header="Images" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Images}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding Url}" Width="80" Height="80" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>


        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="BOOK"  Margin="5,5,5,5" Grid.Row="1"  FontWeight="Bold" Click="Button_Click_Book"></Button>
            <Button Content="SHOW ALL"  Margin="5,5,5,5"  FontWeight="Bold" Click="Button_Click_ShowAll"></Button>
            <Button Content="SHOW IMAGES"  Margin="5,5,5,5"  FontWeight="Bold" Click="Button_Click_ShowImages"></Button>
        </StackPanel>

        <StackPanel x:Name="NotificationBlock" Orientation="Horizontal" HorizontalAlignment="Left" Background="LightGreen" Height="60"
                    Width="280" Grid.Row="0" Visibility="Hidden"  Grid.RowSpan="2" Margin="500,10,0,30" >
            <TextBlock Margin="3" VerticalAlignment="Center" FontSize="12" FontWeight="Bold">You have to select your accommodation!</TextBlock>
            <Button Height="20" Width="30" Margin="3" FontWeight="Bold" FontSize="14">X</Button>
        </StackPanel>
    </Grid>
</Page>
