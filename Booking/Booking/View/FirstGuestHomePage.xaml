<Window x:Class="Booking.View.FirstGuestHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Booking.View"
        mc:Ignorable="d"
        Title="GuestHomePage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="760"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="2" Grid.Column="1">
            <DataGrid Name="AccommodationDataGrid" IsReadOnly="True" AutoGenerateColumns="False" Height="325" HeadersVisibility="Column" FontSize="13">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Width="80" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="City" Width="80" Binding="{Binding Location.City}"/>
                    <DataGridTextColumn Header="Country" Width="80" Binding="{Binding Location.State}"/>
                    <DataGridTextColumn Header="Type" Width="80"  Binding="{Binding Type}"/>
                    <DataGridTextColumn Header="Capacity" Width="80"  Binding="{Binding Capacity}" />
                    <DataGridTextColumn Header="Advance reservation restrictions" Binding="{Binding MinNumberOfDays}"/>
                    <DataGridTextColumn Header="CancelationPeriod" Binding="{Binding CancelationPeriod}"/>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <ToolBar Grid.Row="0" Grid.ColumnSpan="3">
            <Button Click ="Button_Click_Search" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Search" FontSize="14" VerticalAlignment="Center"  />
                </StackPanel>
            </Button>
            <Separator/>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Reservation" FontSize="14" VerticalAlignment="Center"  />
                </StackPanel>
            </Button>
            <Separator></Separator>
        </ToolBar>
    </Grid>
</Window>
